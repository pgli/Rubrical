@model Rubrical.AdminModels.ApplicationUserListViewModel

@{
    ViewData["Title"] = "Admin Control Panel";
}

@section scripts {
    <script src="~/js/admin.js"></script>
}

<style>
    input[type=checkbox] {
        width: 30px;
        height: 30px;
    }
</style>

<h1>Admin Control Panel</h1>

<div class="row">
    <div class="col-sm-6">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>User Name</th>
                    <th>Admin</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.Name</td>
                        <td><input type="checkbox" name="admin-toggle" data-user-id="@user.Id" @(user.IsAdmin ? "checked" : "")></td>
                        <td><button type="button" name="admin-delete" class="btn btn-danger" data-user-id="@user.Id">X</button></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-sm-6">

    </div>
</div>

