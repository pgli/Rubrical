@model Rubrical.Models.Subject

@{
    ViewData["Title"] = "Delete";
}

<style>
    .col-sm-6, h2, form {
        text-align: center;
        margin: 0 auto;
    }
</style>

<h2>Subject Delete</h2>

<div>
    <hr />
    <dl class="row">
        <div class="col-sm-6">
            @Model.SubjectName - @Model.SubjectDescription
        </div>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /><br /><br />
        <a asp-controller="Admin" asp-action="Index">Back to Admin Control Panel</a>
    </form>
</div>
